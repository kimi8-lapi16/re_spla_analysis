{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Splatoon Analysis API",
    "description": "Splatoon Analysis API"
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["UserController"],
        "summary": "Login a user",
        "description": "Authenticates a user with their credentials.",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "$ref": "#/components/schemas/LoginRequest"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/signUp": {
      "post": {
        "tags": ["UserController"],
        "summary": "Create User",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "$ref": "#/components/schemas/SignUpRequest"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New User Instance",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["UserController"],
        "summary": "fetch a user",
        "description": "fetch by user from jwt",
        "responses": {
          "200": {
            "description": "Self User Instance",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token required."
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["mailAddress", "password"]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "JWT token for the authenticated user"
          }
        },
        "required": ["token"]
      },
      "SignUpRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["name", "mailAddress", "password"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "registerDate": {
            "type": "string",
            "format": "date-time"
          },
          "cancelDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "name", "mailAddress", "password", "registerDate", "cancelDate"]
      },
      "BattleType": {
        "type": "string",
        "enum": ["CHALLENGE", "OPEN", "X"]
      },
      "MatchResult": {
        "type": "string",
        "enum": ["VICTORY", "DEFEAT", "DRAW"]
      }
    }
  }
}
