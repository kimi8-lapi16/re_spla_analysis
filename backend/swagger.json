{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Splatoon Analysis API",
    "description": "Splatoon Analysis API"
  },
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["UserController"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "$ref": "#/components/schemas/LoginRequest"
                  }
                }
              }
            }
          }
        },
        "response": {
          "200": {
            "description": "Login Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": ["token"]
                }
              }
            }
          }
        }
      }
    },
    "/users/signUp": {
      "post": {
        "tags": ["UserController"],
        "summary": "Create User",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "$ref": "#/components/schemas/SignUpRequest"
                  }
                }
              }
            }
          }
        },
        "response": {
          "200": {
            "description": "New User Instance",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": ["token"]
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["UserController"],
        "summary": "GET ALL Users",
        "responses": {
          "200": {
            "description": "Fetch List of User",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["UserController"],
        "summary": "Update or Create User",
        "response": {
          "200": {
            "description": "New User Instance",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["mailAddress", "password"]
      },
      "SignUpRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["name", "mailAddress", "password"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "mailAddress": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "registerDate": {
            "type": "string",
            "format": "date-time"
          },
          "cancelDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "name", "mailAddress", "password", "registerDate", "cancelDate"]
      },
      "BattleType": {
        "type": "string",
        "enum": ["CHALLENGE", "OPEN", "X"]
      },
      "MatchResult": {
        "type": "string",
        "enum": ["VICTORY", "DEFEAT", "DRAW"]
      }
    }
  }
}
